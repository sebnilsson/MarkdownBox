<div id="directory" class="no-display" data-path="/">
    <div id="directory-content-header">
        <span id="directory-content-header-text" class="clickable expanded">&#x25B2; Files</span>
        <span id="directory-content-refresh" class="clickable">&nbsp;</span>
        <span id="directory-content-spinner" class="no-display">&nbsp;</span>
    </div>
    <div id="directory-content">
        <div id="directory-content-entries"></div>
        <div id="file-add" class="clickable"><a href="#modal-textbox-add"><strong>+</strong> Add New File</a></div>
    </div>
</div>

<div id="wmd-spinner-area" class="no-display">
    <span id="wmd-spinner">&nbsp;</span>
</div>

<div id="wmd" class="no-display">
    <div>
        <span id="wmd-file-title"></span>
        <a id="file-rename" href="#modal-textbox-rename">[rename]</a>
        <a id="file-delete" href="#">[delete]</a>
    </div>
    <div id="wmd-panel">
        <div id="wmd-button-bar"></div>
        <textarea id="wmd-input"></textarea>
    </div>
    
    <button id="save-button">Save</button>
    <button id="reset-button">Reset</button>
    <input type="checkbox" name="auto-save" id="auto-save"> <label for="auto-save">Auto-save</label>
    <span id="save-spinner" class="no-display"></span>

    <div id="wmd-preview" class="wmd-box">&nbsp;</div>
    
    <textarea id="wmd-html" class="wmd-box"></textarea>
</div>